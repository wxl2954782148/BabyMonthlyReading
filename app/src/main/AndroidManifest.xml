<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wang.babymonthlyreading">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BabyMonthlyReading">
        <activity
            android:name=".activity.PersonalDataActivity"
            android:exported="true" />
        <activity
            android:name=".activity.OrderCenterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.UserCenterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SubmitOrderActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ShoppingCartActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.BookDetailActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.SearchResultActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.CustomBookActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.SearchActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustNothing" />
    </application>

</manifest>